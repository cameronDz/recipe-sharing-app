<% provide(:title, "User Sign Up") %>

<div class="col-md-6 col-md-offset-3">
  <h1>User Sign Up</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xm-12">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <div class="user-form">
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :password %>
        <%= f.password_field :password %>
        
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
