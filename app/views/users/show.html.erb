<% provide(:title, @user.name) %>
<div class="container">
  <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<%= gravatar_for @user %>
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<b><%= @user.name %></b>
					</div>
					<div class="profile-usertitle-job">
						MEMBER
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
					<%= link_to "Log out", logout_path, method: "delete", class: "btn btn-md btn-warning" %>
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
					  <li class="active">
							<a href="#">Profile</a>
						</li>
						<li>
							<a href="/recipe_search">Recipe Search</a>
						</li>
						<li>
							<a href="/recipes/new">Create Recipe</a>
						</li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>
		<div class="col-md-9">
      <div class="profile-content">
			   <h1>Welcome <%= @user.name %></h1>
      </div>
		</div>
	</div>
</div>