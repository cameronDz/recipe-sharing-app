<% provide(:title, "Recipe Search") %>

<div class="container">
  
  <div class="row">
    <div class="col-12">
      <h2>Recipe Search Page</h2>
      <h4>Search for a recipe here!</h4>
    </div>
  </div>
      
  <br>
  
  <div class="row">
    <div class="input-group col-lg-6 col-sm-12">
      <%= form_tag(recipe_search_path, remote: true, id:"recipe_search_form") do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil %>
      <% end %>
    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="col-12" id="results">
      <%= render 'results' %>
    </div>
  </div>
    
</div>
