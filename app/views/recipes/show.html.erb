<% provide(:title, "Recipe View") %>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Ingredients</strong>
    <% @recipe.ingredients.each do |ingredient| %>
     <%= ingredient.name %>
    <% end %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Home', root_path %>
