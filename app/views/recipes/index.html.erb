<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>

<%= search_form_for @q , url: recipes_path, :html => {method: :post} do |f| %>
  <% Ingredient.all.each do |ingredient| %>
     <%= check_box_tag('q[ingredients_id_eq_any][]', ingredient.id ) %>
     <%= ingredient.name %>
  <% end %>
  <%= f.submit "Search" %>
<% end %>

